{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.ColoredConsole", "Serilog.Sinks.MongoDB"],
    "WriteTo": [
        { "Name": "ColoredConsole" },
        { "Name": "MongoDB", "Args": { "databaseUrl": "mongodb://localhost/logs", "collectionName": "Blog" } }
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    }
  }
}
